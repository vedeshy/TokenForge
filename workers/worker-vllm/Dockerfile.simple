FROM nvidia/cuda:12.2.0-runtime-ubuntu22.04

WORKDIR /app

# Install Python and dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-dev \
    git \
    wget \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip
RUN pip3 install --no-cache-dir --upgrade pip setuptools wheel

# Copy requirements and install dependencies
COPY requirements.txt .

# Install dependencies one by one for better error visibility
RUN pip3 install --no-cache-dir fastapi>=0.104.1,<0.105.0
RUN pip3 install --no-cache-dir uvicorn>=0.24.0,<0.25.0
RUN pip3 install --no-cache-dir pydantic>=2.4.2,<2.5.0
RUN pip3 install --no-cache-dir httpx>=0.25.0,<0.26.0
RUN pip3 install --no-cache-dir prometheus-client>=0.17.1,<0.18.0
RUN pip3 install --no-cache-dir torch>=2.0.0,<2.1.0
RUN pip3 install --no-cache-dir vllm>=0.2.0,<0.6.0

# Copy application code
COPY server.py .
COPY metrics.py .

# Expose ports
EXPOSE 8000 8001

# Set environment variables
ENV MODEL_NAME="meta-llama/Llama-3-8b-instruct"
ENV QUANT="fp16"
ENV MAX_MODEL_LEN="8192"

# Run the server
CMD ["python3", "server.py"]
